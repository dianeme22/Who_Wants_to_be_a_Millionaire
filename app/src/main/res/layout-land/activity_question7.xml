<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context=".Question7">

    <Button
        android:id="@+id/prize"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:background="@drawable/header"
        android:enabled="true"
        android:onClick="prizemoney"
        android:padding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/money_7"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ans_black"
        android:enabled="true"
        android:padding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/q7"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prize" />


    <Button
        android:id="@+id/ansA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ans_black"
        android:onClick="submit"
        android:text="@string/q7a1"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/ansB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansA"
        android:background="@drawable/ans_black"
        android:text="@string/q7a2"
        android:textColor="@color/colorWhite"
        android:onClick="submit"/>


    <Button
        android:id="@+id/ansC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansB"
        android:background="@drawable/ans_black"
        android:text="@string/q7a3"
        android:textColor="@color/colorWhite"
        android:onClick="submit"  />

    <Button
        android:id="@+id/ansD"
        android:background="@drawable/ans_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansC"
        android:text="@string/q7a4"
        android:textColor="@color/colorWhite"
        android:onClick="submit"  />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Proceed"
        android:textColor="@color/colorWhite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColorHighlight="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="goto_next_question"/>
</androidx.constraintlayout.widget.ConstraintLayout>